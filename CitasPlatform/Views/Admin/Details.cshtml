@model CitasPlatform.Models.Cita

<style>
    ul,li{
        list-style-type: none;
         padding: 0; /* Remove padding */
         margin: 0; /* Remove margins */
    }
    button{
        margin:3px;
    }
   
    .intinerario-card{
        display:flex;
        flex-direction: row;
    }
    #intinerario-hours{
        padding:10px;
        width:15%;
        display:flex;
        justify-content:center;
        align-items:center;
    }
    #intinerario-info{
        padding:10px;
        width:85%;
        display:flex;
        flex-direction:row;
    }

     #intinerario-info_data{
        width:60%;
        display:flex;
     }
     #intinerario-info_actions{
        width:40%;
        display:flex;
        flex-direction: row;
        justify-content: right;
     }

     .contenedor{
         display:flex;
         flex-direction:row;
     }

     .intinerario-header{
         padding:10px;
     }

     .intinerio-display{
         width:50%;
         padding:10px;
     }
    
     .image-psic{
         width:50%;
         display:flex;
         justify-content:center;
         align-items:center;
     }

</style>




