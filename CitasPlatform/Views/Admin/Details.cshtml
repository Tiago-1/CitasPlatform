<div class="pl-5" >
    <div class ="mt-2 mb-3">
        
            <a  href="/Admin" >  
                
                <svg xmlns="http://www.w3.org/2000/svg" width="25" height="25" fill="currentColor" class="bi bi-arrow-left-circle m-1" viewBox="0 0 16 16">
                  <path fill-rule="evenodd" d="M1 8a7 7 0 1 0 14 0A7 7 0 0 0 1 8zm15 0A8 8 0 1 1 0 8a8 8 0 0 1 16 0zm-4.5-.5a.5.5 0 0 1 0 1H5.707l2.147 2.146a.5.5 0 0 1-.708.708l-3-3a.5.5 0 0 1 0-.708l3-3a.5.5 0 1 1 .708.708L5.707 7.5H11.5z"/>
                </svg>
                Regresar
                </a>
        </div>

<h4 class="mb-4">Cita # @Model.CitaId </h4>
    
    <div class= "card p-4 bg-light" style="width:50%">
        <dl class="row">
        
        <dt class = "col-sm-4 mt-3">
           Alumno
        </dt>
        <dd class = "col-sm-8 mt-3">
            @Html.DisplayFor(model => model.NombreUsuario)
        </dd>

         <dt class = "col-sm-4 mt-3">
            Tipo de Cita
        </dt>
        <dd class = "col-sm-8 mt-3">
            @Html.DisplayFor(model => model.Tipo)
        </dd>

         <dt class = "col-sm-4 mt-3">
            @Html.DisplayNameFor(model => model.Estatus)
        </dt>
        <dd class = "col-sm-8 mt-3">
            @Html.DisplayFor(model => model.Estatus)
        </dd>

         <dt class = "col-sm-4 mt-3">
           Fecha de Cita
        </dt>
        <dd class = "col-sm-8 mt-3">
            @Html.DisplayFor(model => model.Fecha)
        </dd>

         <dt class = "col-sm-4 mt-3">
           Hora de Inicio
        </dt>
        <dd class = "col-sm-8 mt-3">
            @Html.DisplayFor(model => model.H_Inicio )
        </dd>

        <dt class = "col-sm-4 mt-3">
           Hora de Finalizacion
        </dt>
        <dd class = "col-sm-8 mt-3">
            @Html.DisplayFor(model =>  model.H_Final )
        </dd>

        </dl>
        <div>
            <div  style="float:right">
                
             @using (Html.BeginForm("EditStateAtendido", "Admin", new { Id = Model.CitaId }, FormMethod.Get))
                            {
                                 <button class="btn btn-outline-success"  > 
                                <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-x-circle mb-1" viewBox="0 0 16 16">
                                  <path d="M8 15A7 7 0 1 1 8 1a7 7 0 0 1 0 14zm0 1A8 8 0 1 0 8 0a8 8 0 0 0 0 16z"/>
                                  <path d="M4.646 4.646a.5.5 0 0 1 .708 0L8 7.293l2.646-2.647a.5.5 0 0 1 .708.708L8.707 8l2.647 2.646a.5.5 0 0 1-.708.708L8 8.707l-2.646 2.647a.5.5 0 0 1-.708-.708L7.293 8 4.646 5.354a.5.5 0 0 1 0-.708z"/>
                                </svg>
                
                                Atendido</button>
                            }
            @using (Html.BeginForm("EditStateCancelado", "Admin", new { Id = Model.CitaId }, FormMethod.Get))
                            {
            <button class="btn btn-outline-danger"  > 
                
                <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-x-circle mb-1" viewBox="0 0 16 16">
                  <path d="M8 15A7 7 0 1 1 8 1a7 7 0 0 1 0 14zm0 1A8 8 0 1 0 8 0a8 8 0 0 0 0 16z"/>
                  <path d="M4.646 4.646a.5.5 0 0 1 .708 0L8 7.293l2.646-2.647a.5.5 0 0 1 .708.708L8.707 8l2.647 2.646a.5.5 0 0 1-.708.708L8 8.707l-2.646 2.647a.5.5 0 0 1-.708-.708L7.293 8 4.646 5.354a.5.5 0 0 1 0-.708z"/>
                </svg>
                
                Cancelar</button>
                }
                </div>
        </div>
    </div>
    
</div>
