@model IEnumerable<CitasPlatform.Models.Cita>

@{
    ViewData["Title"] = "Citas Psicologa";
}

<style>
    ul,li{
        list-style-type: none;
         padding: 0; /* Remove padding */
         margin: 0; /* Remove margins */
    }
    button{
        margin:3px;
    }
   
    .intinerario-card{
        display:flex;
        flex-direction: row;
    }
    #intinerario-hours{
        padding:10px;
        width:15%;
    }
    #intinerario-info{
        padding:10px;
        width:85%;
        display:flex;
        flex-direction:row;
    }

     #intinerario-info_data{
        width:60%;
        display:flex;
     }
     #intinerario-info_actions{
        width:40%;
        display:flex;
        flex-direction: row;
        justify-content: right;
     }

     .contenedor{
         display:flex;
         flex-direction:row;
     }

     .intinerio-display{
         width:45%
     }
    
     .image-psic{
         width:55%;
         display:flex;
         justify-content:center;
         align-items:center;
     }

</style>



<div>

  <nav class="navbar navbar-dark navbar-expand-lg " style="background-color:#0E7A89">
  <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarTogglerDemo01" 
    aria-controls="navbarTogglerDemo01" aria-expanded="false" aria-label="Toggle navigation">
    <span class="navbar-toggler-icon"></span>
  </button>
  <div class="collapse navbar-collapse " id="navbarTogglerDemo01">
    <a class="navbar-brand font-weight-bold" href="#">Plataforma Citas Online</a>
    <div class="navbar-nav mr-auto mt-2 mt-lg-0">
     
    </div>
    <div class="form-inline my-2 my-lg-0">
      
      <ul class="navbar-nav mr-auto mt-2 mt-lg-0">
      <li class="nav-item active">
        <a class="nav-link" href="#">Inicio <span class="sr-only">(current)</span></a>
      </li>
      <li class="nav-item">
        <a class="nav-link" href="#">Nosotros</a>
      </li>
      <li class="nav-item">
        <a class="nav-link " href="#">Contacto</a>
      </li>
       <li class="nav-item">
        <a class="nav-link active" href="/">Cerrar Sesion</a>
      </li>
    </ul>
    </div>
  </div>
</nav>
    <div class= "container" style="padding-top:20px">
    <h3>Bienvenido Administrador!</h3>
    </div>

    <div class="container-fluid contenedor">
        <div class="intinerio-display">

            <div class="intinerario-header">
                <h4>Intinerario</h4>
            </div>
           <div class="intinerario-body ">
               <ul>

                        @foreach (var item in Model) 
                {
                   <li class="card m-2">
                       <div class="intinerario-card">
                           <div id="intinerario-hours" class="bg-warning font-weight-bold">
                               <ul>
                                   <li>@Html.DisplayFor(modelItem => item.Hora_Inicio)</li>
                                   <li>@Html.DisplayFor(modelItem => item.Hora_Final)</li>
                               </ul>
                           </div>
                           <div id= "intinerario-info" class="bg-light">
                                    <div id= "intinerario-info_data" >
                                         <ul >
                                           <li>@Html.DisplayFor(modelItem => item.UsuarioId)</li>
                                           <li>Razon: @Html.DisplayFor(modelItem => item.Tipo)</li>
                                         </ul>
                                    </div>
                                  
                                    <div id= "intinerario-info_actions" >
                                         <button  class="btn btn-info">Detalles</button>
                                         <button class="btn btn-danger">Eliminar</button>                                  
                                    </div>
                            </div>
                               
                       </div>
                   </li>
                   }
               </ul>
           </div>


        </div>
        <div class="image-psic" >
            <figure class="imagen" style="width:50%;">
                <img src="https://1.bp.blogspot.com/-_dv7Zy9V2ys/VrgytdVvmjI/AAAAAAAAAv8/1MIPyeS-cF0/s1600/psicologia%2Beducativa.png" style="width:100%;">
            </figure>
        </div>
    </div>

</div>