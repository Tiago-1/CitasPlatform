@{
    ViewData["Title"] = "Home Page";
}

<div class="row" style="height:97vh">
    <div class="col-7" align="center">
        <figure class="imagen">
            <img src="https://www.totem.com.mx/wp-content/uploads/2021/04/creatividad.jpg" style="width:75%;margin-top:50px">
        </figure>
    </div>
    <div class="col-5 text-light" style="background: #0E7A89; padding:60px;">
        <h2 >Bienvenidos!</h2>
        <form class="container" method="post" action="/">
            <div class="form-group">
                <label for="exampleInputEmail1">Email address</label>
                <input type="email" name = "user" class="form-control" id="email" aria-describedby="emailHelp"
                    placeholder="Enter email">
                <small id="emailHelp" class="form-text text-warning" >We'll never share your email with anyone
                    else.</small>
            </div>
            <div class="form-group">
                <label for="exampleInputPassword1">Password</label>
                <input type="password" name= "password" class="form-control" id="password" placeholder="Password">
            </div>
             <center>
                <button type="submit" class="btn btn-warning text-light">Acceder</button>
             </center>
        </form>
        <p>
            <center>
                Crear Cuenta
            </center>
        </p>
    </div>
</div>
